 class car
    {
        public string name;
        public int year;

        public car()
        {
            Console.WriteLine("wywo≈Çano konstruktor");
        }
        public void showCar()
        {
            Console.WriteLine("auto " + name + " " + year);
        }
    }
    class car2
    {
        public string name;
        public int year;

        public car2()
        {
            name = "audi";
            year = 2015;
        }
        public void showCar()
        {
            Console.WriteLine("auto " + name + " " + year);
        }
    }
    class car3
    {
        public string name;
        public int year;

        public car3(string aname, int ayear)
        {
            name = aname;
            year = ayear;
        }
        public void showCar()
        {
            Console.WriteLine("auto " + name + " " + year);
        }
    }
